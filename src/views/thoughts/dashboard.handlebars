<section class="dashboard">
    <div class="header">
        <div class="title">
            <h2>Dashboard</h2>
        </div>

        <div class="button-create">
            <a href="/thought-create">Criar Pensamento</a>
        </div>
    </div>
    <div class="content">
        <div class="subtitle">
            <p>Seus pensamentos</p>
        </div>

        {{#each thoughts}}
        <div class="thoughts-list">
            <p>{{  this.description  }}</p>
            <div class="buttons">
                <a href=" /thoughts/edit">Editar</a>
                <a href="">Excluir</a>
            </div>
        </div>
        {{/each}}
    </div>
</section>